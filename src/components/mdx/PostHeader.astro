---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="post-header">
  <div class="post-header__wrapper">
    <div class="post-header__title-group">
      <h1 class="post-header__title">{title}</h1>
      {subtitle && <p class="post-header__subtitle">{subtitle}</p>}
    </div>
    <div class="post-header__intro">
      <slot />
    </div>
  </div>
</header>
