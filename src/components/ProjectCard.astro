---
interface Props {
  slug: string;
  title: string;
  description: string;
  cover: string;
}

const { slug, title, description, cover } = Astro.props;
---

<article class="project-card">
  <div class="project-card-image" data-project={slug}>
    <img src={cover} alt={title} loading="lazy" />
  </div>
  <div class="project-card-info">
    <h3 class="project-card-title">{title}</h3>
    <p class="project-card-description">{description}</p>
  </div>
</article>

<style lang="scss">
  .project-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .project-card-image {
    overflow: hidden;
    cursor: pointer;
    width: 100%;
    height: auto;

    img {
      width: 100%;
      height: auto;
      display: block;
      object-fit: contain;
    }
  }

  .project-card-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .project-card-title {
    font-family: var(--type-title-s-font-family);
    font-size: var(--type-title-s-font-size);
    line-height: var(--type-title-s-line-height);
    letter-spacing: var(--type-title-s-letter-spacing);
    margin: 0;
  }

  .project-card-description {
    font-family: var(--type-text-m-font-family);
    font-size: var(--type-text-m-font-size);
    line-height: var(--type-text-m-line-height);
    letter-spacing: var(--type-text-m-letter-spacing);
    color: var(--text-secondary);
    margin: 0;
  }

  /* Tablet (md) */
  @media (min-width: 48rem) {
    .project-card {
      gap: var(--spacing-xl);
    }

    .project-card-title {
      font-size: var(--type-title-m-font-size);
      line-height: var(--type-title-m-line-height);
      letter-spacing: var(--type-title-m-letter-spacing);
    }
  }

  /* Desktop (xl) */
  @media (min-width: 75rem) {
    .project-card-info {
      flex-direction: row;
      align-items: flex-end;
      gap: var(--spacing-xxl);
    }

    .project-card-title {
      flex: 1;
    }

    .project-card-description {
      max-width: var(--width-text-minimum-max);
      flex-shrink: 0;
    }
  }
</style>
