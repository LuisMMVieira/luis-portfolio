---
// Empty component - content loaded dynamically via JavaScript
---

<div id="project-modal" class="project-modal" aria-hidden="true">
  <div class="project-modal-backdrop"></div>
  <div class="project-modal-container">
    <button class="project-modal-close" aria-label="Close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12" />
      </svg>
    </button>
    <div class="project-modal-content">
      <!-- Content loaded dynamically -->
    </div>
  </div>
</div>

<style is:global>
  body.modal-open {
    overflow: hidden;
  }
</style>

<style>
  .project-modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    visibility: hidden;
  }

  .project-modal.is-open {
    visibility: visible;
  }

  .project-modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
  }

  .project-modal-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    background: var(--bg-default);
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .project-modal.is-open .project-modal-container {
    transform: translateY(0);
  }

  .project-modal-close {
    position: sticky;
    top: var(--spacing-md);
    float: right;
    margin-right: var(--spacing-md);
    margin-top: var(--spacing-md);
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;
    border: none;
    border-radius: var(--radius-infinite);
    background: var(--bg-default);
    color: var(--text-primary);
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .project-modal-close:hover {
    background: var(--bg-elevated);
  }

  .project-modal-content {
    padding: var(--spacing-xl);
    padding-block-start: var(--spacing-md);
  }

  /* Loading state */
  .project-modal-content.is-loading {
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-modal-content.is-loading::after {
    content: "";
    width: 2rem;
    height: 2rem;
    border: 2px solid var(--border-default);
    border-top-color: var(--text-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Content styles */
  .project-modal-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-sm);
  }

  .project-modal-content :global(.project-cover) {
    width: 100%;
    aspect-ratio: 16 / 10;
    object-fit: cover;
    margin-block-end: var(--spacing-lg);
  }

  .project-modal-content :global(h1) {
    font-family: var(--font-family-display);
    font-size: var(--font-size-6);
    line-height: var(--line-height-2);
    margin: 0 0 var(--spacing-sm);
  }

  .project-modal-content :global(.project-description) {
    font-size: var(--type-body-lg-font-size);
    line-height: var(--type-body-lg-line-height);
    color: var(--text-secondary);
    margin-block-end: var(--spacing-xl);
  }

  .project-modal-content :global(h2) {
    font-family: var(--font-family-display);
    font-size: var(--font-size-5);
    line-height: var(--line-height-3);
    margin: var(--spacing-xl) 0 var(--spacing-sm);
  }

  .project-modal-content :global(h2:first-of-type) {
    margin-top: 0;
  }

  .project-modal-content :global(p) {
    margin: 0 0 var(--spacing-md);
  }

  .project-modal-content :global(ul),
  .project-modal-content :global(ol) {
    margin: 0 0 var(--spacing-md);
    padding-left: var(--spacing-lg);
  }

  .project-modal-content :global(li) {
    margin-bottom: var(--spacing-xs);
  }

  .project-modal-content :global(strong) {
    font-weight: var(--font-weight-semibold);
  }

  @media (min-width: 48rem) {
    .project-modal-content {
      padding: var(--spacing-xxl);
      padding-block-start: var(--spacing-lg);
    }
  }
</style>

