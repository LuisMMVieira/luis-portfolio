---
// Empty component - content loaded dynamically via JavaScript
---

<div id="project-modal" class="project-modal" aria-hidden="true">
  <div class="project-modal-backdrop"></div>
  <button class="project-modal-close" aria-label="Close">
    <span class="project-modal-close-text">ESC /</span>
    <span class="project-modal-close-icon">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M2 2L22 22" stroke="currentColor" stroke-width="1.5" />
        <path d="M22 2L2 22" stroke="currentColor" stroke-width="1.5" />
      </svg>
    </span>
  </button>
  <div class="project-modal-container">
    <div class="project-modal-content">
      <!-- Content loaded dynamically -->
    </div>
  </div>
</div>

<style lang="scss">
  .project-modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    visibility: hidden;
    padding-block-start: 0;
    pointer-events: none;
    width: 100%;

    &.is-open,
    &.is-closing {
      visibility: visible;
    }

    &.is-open {
      pointer-events: auto;

      .project-modal-close {
        opacity: 1;
      }
    }

    &.is-closing {
      .project-modal-close {
        opacity: 0;
        transition-delay: 0s;
      }
    }
  }

  .project-modal-backdrop {
    position: absolute;
    inset: 0;
    background: var(--bg-default);
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .project-modal.is-open .project-modal-backdrop {
    opacity: 1;
  }

  .project-modal-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    height: 100%;
    overflow-y: auto;
    background: var(--bg-default);
    outline: var(--border-width-hairline) solid var(--border-default);
    outline-offset: 0;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .project-modal.is-open .project-modal-container {
    transform: translateY(0);
  }

  .project-modal-close {
    position: fixed;
    top: var(--spacing-xxs); /* 4px */
    right: var(--spacing-xs);
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs);
    border: none;
    outline: none;
    background: transparent;
    border-radius: var(--radius-infinite);
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s ease 0.4s;
    z-index: 1001;

    &:hover {
      opacity: 0.7;
    }
  }

  .project-modal-close-text {
    display: inline;
    font-family: var(--type-text-s-font-family);
    font-size: var(--type-text-s-font-size);
    line-height: var(--type-text-s-line-height);
    letter-spacing: var(--type-text-s-letter-spacing);
    color: var(--color-base);
    text-transform: uppercase;
  }

  .project-modal-close-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: transparent;
    color: var(--text-primary);
  }

  /* Desktop (xl) - matches site grid: min 1200px, max 1360px */
  @media (min-width: 75rem) {
    .project-modal {
      padding-block-start: 3rem; /* 48px: 4px + 40px button + 4px */
      padding-block-end: 0;
    }

    .project-modal-container {
      width: 100%;
      min-width: 75rem;
      max-width: var(--width-modal-max);
      margin-inline: auto;
    }

    .project-modal-close {
      position: absolute;
      top: var(--spacing-xxs); /* 4px */
      right: var(--spacing-xs);
    }
  }
</style>

<style is:global lang="scss">
  html.modal-open {
    overflow: hidden;
  }

  /* Project Modal Content - Must be global because content is loaded dynamically */
  /* Uses same 12-col grid and max-width (1360px) as main site */
  .project-modal-content {
    padding: 0;
    overflow-x: hidden;
    width: 100%;

    /* .post-page stacks sections; each section has its own grid */
    .post-page {
      width: 100%;
      max-width: 100%;
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
    }

    /* Loading state */
    &.is-loading {
      min-height: 50vh;
      display: flex;
      align-items: center;
      justify-content: center;

      &::after {
        content: "";
        width: 2rem;
        height: 2rem;
        border: 2px solid var(--border-default);
        border-top-color: var(--text-primary);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
      }
    }

    /* General content styles */
    ul,
    ol {
      margin: 0 0 var(--spacing-md);
      padding-left: var(--spacing-lg);
    }

    li {
      margin-bottom: var(--spacing-xs);
    }

    strong {
      font-weight: var(--font-weight-semibold);
    }
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Desktop */
  @media (min-width: 75rem) {
    .project-modal-content {
      padding: 0;
    }
  }
</style>
