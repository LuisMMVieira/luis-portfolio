---
import '../styles/main.scss';
import Header from '../components/Header.astro';
// import PasswordGate from "../components/PasswordGate.astro";
import ProjectModal from '../components/ProjectModal.astro';

const {
  title = 'Luis Vieira—Digital Product Designer',
  description = 'I design purposeful digital products—clear systems with human presence.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="preload"
      href="/fonts/DazzedTRIAL-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <title>{title}</title>
    <meta name="description" content={description} />
    <slot name="head" />
    <script is:inline>
      if (localStorage.getItem('theme') === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body>
    <!-- <PasswordGate /> -->
    <div class="page">
      <Header />
      <main class="content">
        <slot />
      </main>
    </div>

    <ProjectModal />

    <script type="module" src="/scripts/main.js"></script>
  </body>
</html>
